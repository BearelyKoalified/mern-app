  "devDependencies": {
    "nodemon": "^1.19.2"
  },
  "dependencies": {
    "aws-sdk": "^2.535.0",
    "bcryptjs": "^2.4.3",
    "concurrently": "^4.1.2",
    "config": "^3.2.2",
    "dotenv": "^8.1.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^5.7.1"
  }
}
